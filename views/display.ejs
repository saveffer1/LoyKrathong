<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>ลอยกระทง</title>
  <link rel="stylesheet" href="/styles/display.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</head>
<body>
  <div class="full-landing-image">
    <div class="text-center mt-4">
      <a href="/" class="btn btn-secondary">กลับไปขอพรใหม่</a>
    </div>
    <% data.forEach(item => { %>
      <div class="floating" data-id="<%= item.name %>">
        <img src="/images/krathong.png" alt="fixed" />
        <p><strong><%= item.name %></strong>: <%= item.message %></p>
      </div>
    <% }) %>
  </div>

  <script src="/scripts/floating.js"></script>
</body>
</html>
